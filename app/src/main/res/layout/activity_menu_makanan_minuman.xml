<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground"
    tools:context="com.example.android.yourbodygoals_apps.MenuMakananMinuman">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/et_age_makanan_minuman"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:inputType="phone"
        android:hint="ENTER THE AGE"/>

    <Button
        android:id="@+id/btn_show_makanan_minuman"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="SHOW DATA"/>

    <TextView
        android:id="@+id/tv_result_makanan_minuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:padding="10dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="#ffff"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
